{
    "name": "haveboard/composer-npm-bridge",
    "description": "eloquent fork, NPM integration for Composer packages.",
    "keywords": ["composer", "npm", "package", "integration", "bridge", "plugin", "composer-plugin"],
    "homepage": "https://github.com/eloquent/composer-npm-bridge",
    "license": "MIT",
    "authors": [
        {
            "name": "haveboard",
            "email": "haveboard@gmail.com",
            "homepage": "https://jonathanfinnegan.com/"
        }
    ],
    "type": "composer-plugin",
    "require": {
        "php": ">=7.2",
        "composer-plugin-api": "^2"
    },
    "require-dev": {
        "composer/composer": "^2",
        "eloquent/code-style": "^1",
        "eloquent/phony-phpunit": "^6",
        "friendsofphp/php-cs-fixer": "^2",
        "errors/exceptions": "^0.2",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "Eloquent\\Composer\\NpmBridge\\": "src"
        }
    },
    "extra": {
        "class": "Eloquent\\Composer\\NpmBridge\\NpmBridgePlugin"
    }
}
